<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:padding="4dp"
              android:gravity="left|center_vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="left|center_vertical">

        <ImageView
            android:id="@+id/img_speaker"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_launcher"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_speaker_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/green"
                android:textStyle="bold"
                android:textSize="12sp"
                android:typeface="sans"
                android:text="Haifa Baluyos â€¢ DevCon"/>

            <TextView
                android:id="@+id/txt_program_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/orange"
                android:text="Trends and Best Practices in Android Development"/>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/txt_program_description"
        android:layout_marginLeft="58dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:paddingBottom="8dp"
        android:typeface="monospace"
        android:text="Learn the latest trends and Best Practices in Android Development with the ux ambassador"/>
</LinearLayout>